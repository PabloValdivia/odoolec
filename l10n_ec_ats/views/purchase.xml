<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="extension_account_move_form" model="ir.ui.view">
          <field name="name">extension.account.move.form</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='journal_id']" position="after">
                  <field name="auth_date" required="1"  attrs="{'invisible': ['|', '|', ('state','not in',['draft']), ('type', '=', 'purchase'), ('type', '!=', 'in_invoice')]}"/>
              </xpath>
              <xpath expr="//field[@name='purchase_vendor_bill_id']" position="after">
                   <field name="document_no" placeholder="NÂ° de Documento" required="1"
                    attrs="{'invisible': ['|', '|', ('state','not in',['draft']), ('type', '=', 'purchase'), ('type', '!=', 'in_invoice')]}"/>
                  <field name="authorization_code" required="1"
                   attrs="{'invisible': ['|', '|', ('state','not in',['draft']), ('type', '=', 'purchase'), ('type', '!=', 'in_invoice')]}"/>
              </xpath>
          </field>
        </record>
    </data>
</odoo>
